<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.alura.agenda"
    tools:ignore="GoogleAppIndexingWarning">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.FormularioAlunoActivity">
        </activity>
        <activity android:name=".ui.activity.ListaAlunosActivity"> <!-- Declara uma activity -->
            <intent-filter> <!-- Filtro de intenções com a activity -->
                <action android:name="android.intent.action.MAIN" /> <!-- Define como a activity principal -->
                <category android:name="android.intent.category.LAUNCHER" /> <!-- Define como lançada no launcher (abertura) -->
            </intent-filter>
        </activity>
    </application>

</manifest>